# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# C# files
[*.cs]

# Indentation settings
indent_style = space
indent_size = 4
tab_width = 4

# End of line settings
end_of_line = crlf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# C# Coding Conventions

# Namespace naming rules
dotnet_naming_rule.namespace_names_should_be_pascal_case.symbols = namespace_symbols
dotnet_naming_rule.namespace_names_should_be_pascal_case.style = pascal_case_style
dotnet_naming_rule.namespace_names_should_be_pascal_case.severity = suggestion

dotnet_naming_symbols.namespace_symbols.applicable_kinds = namespace
dotnet_naming_symbols.namespace_symbols.applicable_accessibilities = *
dotnet_naming_symbols.namespace_symbols.required_modifiers = 

dotnet_naming_style.pascal_case_style.capitalization = pascal_case

# Class naming rules
dotnet_naming_rule.class_names_should_be_pascal_case.symbols = class_symbols
dotnet_naming_rule.class_names_should_be_pascal_case.style = pascal_case_style
dotnet_naming_rule.class_names_should_be_pascal_case.severity = error

dotnet_naming_symbols.class_symbols.applicable_kinds = class, struct, interface, enum, delegate
dotnet_naming_symbols.class_symbols.applicable_accessibilities = *

# Method naming rules
dotnet_naming_rule.method_names_should_be_pascal_case.symbols = method_symbols
dotnet_naming_rule.method_names_should_be_pascal_case.style = pascal_case_style
dotnet_naming_rule.method_names_should_be_pascal_case.severity = error

dotnet_naming_symbols.method_symbols.applicable_kinds = method
dotnet_naming_symbols.method_symbols.applicable_accessibilities = *

# Property naming rules
dotnet_naming_rule.property_names_should_be_pascal_case.symbols = property_symbols
dotnet_naming_rule.property_names_should_be_pascal_case.style = pascal_case_style
dotnet_naming_rule.property_names_should_be_pascal_case.severity = error

dotnet_naming_symbols.property_symbols.applicable_kinds = property
dotnet_naming_symbols.property_symbols.applicable_accessibilities = *

# Private field naming rules
dotnet_naming_rule.private_field_names_should_be_camel_case.symbols = private_field_symbols
dotnet_naming_rule.private_field_names_should_be_camel_case.style = camel_case_style
dotnet_naming_rule.private_field_names_should_be_camel_case.severity = error

dotnet_naming_symbols.private_field_symbols.applicable_kinds = field
dotnet_naming_symbols.private_field_symbols.applicable_accessibilities = private

dotnet_naming_style.camel_case_style.capitalization = camel_case

# Constant naming rules
dotnet_naming_rule.constant_names_should_be_pascal_case.symbols = constant_symbols
dotnet_naming_rule.constant_names_should_be_pascal_case.style = pascal_case_style
dotnet_naming_rule.constant_names_should_be_pascal_case.severity = error

dotnet_naming_symbols.constant_symbols.applicable_kinds = constant, readonly_field
dotnet_naming_symbols.constant_symbols.applicable_accessibilities = *

# Code Style Preferences

# 'var' preferences
dotnet_style_var_for_built_in_types = true:suggestion
dotnet_style_var_when_type_is_apparent = true:suggestion
dotnet_style_var_elsewhere = false:suggestion

# Prefer expression-bodied members
csharp_style_expression_bodied_methods = true:suggestion
csharp_style_expression_bodied_properties = true:suggestion

# Prefer simplified type names (e.g., int instead of System.Int32)
dotnet_style_predefined_type_for_locals_parameters_members = true:suggestion

# Bracing style
csharp_new_line_before_open_brace = all
csharp_new_line_for_members_in_object_initializers = true
csharp_new_line_for_members_in_anonymous_types = true

# Spacing preferences
csharp_space_after_cast = false
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false
csharp_space_after_keywords_in_control_flow_statements = true
csharp_space_around_binary_operators = before_and_after
csharp_space_inside_method_declaration_parameter_list_parentheses = false
csharp_space_inside_method_call_parameter_list_parentheses = false
csharp_space_before_colon_in_inheritance_clause = false
csharp_space_after_colon_in_inheritance_clause = true
csharp_space_before_comma = false
csharp_space_after_comma = true
csharp_space_before_semicolon = false
csharp_space_after_semicolon = true
csharp_indent_switch_labels = false
csharp_indent_case_contents = true
csharp_indent_case_contents_when_block = true

# Modifier ordering and preferences
dotnet_sort_system_directives_first = true:suggestion
csharp_prefer_braces = always:suggestion
csharp_prefer_static_modifiers = true:suggestion
csharp_prefer_accessibility_modifiers = true:suggestion

# File Header (Optional)
# You can define a file header template if desired.
# Example:
# csharp_new_line_before_namespace = true
# csharp_indent_namespace_contents = true

# Organize using directives
dotnet_sort_system_directives_first = true:suggestion

# Additional C# code style rules
# Enforce consistent naming and formatting practices.
# More rules can be added based on project requirements.

# Severity levels:
# none, silent, suggestion, warning, error

# Example of setting severity for specific analyzers:
# dotnet_diagnostic.CA1707.severity = warning